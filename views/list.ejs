<%- include("header") -%>

<body>
  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% newListItem.forEach(item=>{ %>
    <form class="" action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="itemID" value="<%=item._id%>" onchange="submit()">
        <input type="hidden" name="listName" value="<%=listTitle%>">
        <p> <%= item.name%></p>
      </div>
    </form>
    <%});%>
    <form class="item" action=<%= route %> method="post">
      <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
      <button type="submit" name="button" value="<%=listTitle%>">+</button>
    </form>
  </div>
  <%- include("footer") -%>
</body>

</html>
